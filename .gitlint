[general]
ignore=body-changed-file-mention
ignore-merge-commits=false
ignore-fixup-commits=false
ignore-squash-commits=false
ignore-stdin=true
fail-without-commits=true

[title-max-length]
line-length=50

[body-max-line-length]
line-length=72

[title-match-regex]
regex=^(?!.*(#\d+))

[body-match-regex]
regex=^(?!.*(#\d+))
